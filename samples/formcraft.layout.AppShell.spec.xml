<?xml version="1.0" encoding="UTF-8"?>
<spec type="layout" name="FormCraft">
  <layout name="AppShell">
    <container type="column" prompt="min height 100vh">
      <slot name="header" prompt="position top, sticky, height 64px" />
      <container type="row" prompt="grow">
        <slot name="sidebar" prompt="width 240px, collapsible, breakpoint md" />
        <slot name="content" prompt="grow, scroll, padding large" />
      </container>
    </container>
  </layout>
</spec>
